{{left_sidebar_enabled,right_sidebar_enabled=False,('message' in globals())}}
{{extend 'layout.html'}}

{{block header}}
    <header class="container-fluid background">R
      <div class="jumbotron text-center">
        <h1>RPSOnline
          <small>{{=response.subtitle or ''}}</small></h1>
        {{pass}}
      </div>
    </header>
{{end}}

<html>
    <head>
        <style>
            .button {
                background-color: #FFFFFF;
                border: none;
                color: white;
                padding: 15px 32px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
                margin: 4px 2px;
                cursor: pointer;
            }
        </style>
    </head>
    <body>
        <a href="{{=URL('default', 'createProfile')}}" class="button">Create a profile</a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a href="{{=URL('default', 'play')}}" class="button">Play the game!</a>
    </body>
    
</html>
