{{extend 'layout.html'}}

<style>
            .info {
                background-color: #000000;
                border: none;
                color: gold;
            }
            .bottom-three {
                margin-bottom: 3cm
            }
            .container > div {
                display: inline-block;
                display: -moz-inline-box;
                *display: inline; /* For IE7 */
                zoom: 1; /* Trigger hasLayout */
                width: 33%;
                text-align: center;
            }
</style>
<br /><br />
<body style="background-color:#DCDCDC;">
    
        <div class="container">
            <div><a href="{{=URL('default', 'index')}}" class="button">Return Home</a></div><div><a href="{{=URL('default', 'play')}}" class="button">Play the Game!</a></div><div><a href="{{=URL('default', 'stats')}}" class="button">View the Leaderboard</a></div>
        </div>
    
    {{if auth.user_id:}}
    <a class="info">{{=db.auth_user[auth.user_id].username}} </a>
    <br /><br />
        {{if picture:}}
        <img width="150px" src="{{=URL('download', args=picture)}}" />
        {{else:}}
        <img width="120px"
             src="http://ctlatinonews.com/wp-content/uploads/missing-mcsanl.gov_.png" />
        {{pass}}
    <h3>Favorite Choice: {{=db.auth_user[auth.user_id].RPS}}<br /><br />
    Biography: {{=db.auth_user[auth.user_id].body}}<br /><br /></h3>
    <h7>Joined: {{=db.auth_user[auth.user_id].created_on}}</h7>
    
{{pass}}
</body>
